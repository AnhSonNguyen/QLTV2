@model IEnumerable<QLTV2.Models.TbAccount>

@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1>Danh sách tài khoản</h1>
            <a class="btn btn-success" asp-action="Create">➕ Thêm tài khoản mới</a>
        </div>
        <form asp-action="Index" method="get" class="mt-3">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Nhập tên đăng nhập hoặc họ tên..." value="@Context.Request.Query["searchTerm"]" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">🔍 Tìm kiếm</button>
                </div>
            </div>
        </form>
    </section>

    <section class="content mt-3">
        <div class="container-fluid">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Họ tên</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Lần đăng nhập cuối</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Username</td>
                            <td>@item.FullName</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.RoleId</td> @* Có thể sửa thành @item.Role.RoleName nếu có include *@
                            <td>@item.LastLogin?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.AccountId">✏️ Sửa</a>
                                <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.AccountId">📖 Chi tiết</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AccountId" onclick="return confirm('Bạn có chắc muốn xóa tài khoản này?');">🗑️ Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
