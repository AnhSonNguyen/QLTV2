@model QLTV2.Models.TbAccount

@{
    ViewData["Title"] = "Xác nhận xóa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Tiêu đề & nút quay lại -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1>Xác nhận xóa tài khoản</h1>
            <a class="btn btn-secondary" asp-action="Index">⬅️ Quay lại danh sách</a>
        </div>
    </section>

    <!-- Nội dung xác nhận -->
    <section class="content mt-3">
        <div class="container-fluid">
            <h5>Bạn có chắc chắn muốn xóa tài khoản sau không?</h5>

            <div class="card mt-3">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Tên đăng nhập</dt>
                        <dd class="col-sm-9">@Model.Username</dd>

                        <dt class="col-sm-3">Họ tên</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Số điện thoại</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>

                        <dt class="col-sm-3">Vai trò</dt>
                        <dd class="col-sm-9">@Model.Role?.RoleName</dd>

                        <dt class="col-sm-3">Lần đăng nhập cuối</dt>
                        <dd class="col-sm-9">
                            @(Model.LastLogin.HasValue ? Model.LastLogin.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa đăng nhập")
                        </dd>
                    </dl>

                    <!-- Form xác nhận xóa -->
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="AccountId" />
                        <button type="submit" class="btn btn-danger">🗑️ Xác nhận xóa</button>
                        <a asp-action="Index" class="btn btn-secondary">❌ Hủy</a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
