@model QLTV2.Models.TbBook

@{
    ViewData["Title"] = "Xóa sách";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1>Xác nhận xóa sách</h1>
            <a class="btn btn-secondary" asp-action="Index">⬅️ Quay lại danh sách</a>
        </div>
    </section>

    <section class="content mt-3">
        <div class="container-fluid">
            <h5>Bạn có chắc chắn muốn xóa cuốn sách sau không?</h5>

            <div class="card mt-3">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Tên sách</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Tác giả</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3">Thể loại</dt>
                        <dd class="col-sm-9">@Model.Category?.Title</dd>

                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Số lượng</dt>
                        <dd class="col-sm-9">@Model.Quantity</dd>

                        <dt class="col-sm-3">Ngày tạo</dt>
                        <dd class="col-sm-9">@Model.CreatedDate?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Người tạo</dt>
                        <dd class="col-sm-9">@Model.CreatedBy</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="BookId" />
                        <button type="submit" class="btn btn-danger"> Xác nhận xóa</button>
                        <a asp-action="Index" class="btn btn-secondary"> Hủy</a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
