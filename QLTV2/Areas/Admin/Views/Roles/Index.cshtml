@model IEnumerable<QLTV2.Models.TbRole>

@{
    ViewData["Title"] = "Danh sách vai trò";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1>Danh sách vai trò</h1>
            <a class="btn btn-success" asp-action="Create">➕ Thêm vai trò mới</a>
        </div>
        <form asp-action="Index" method="get" class="mt-3">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Nhập tên vai trò cần tìm..." value="@Context.Request.Query["searchTerm"]" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">🔍 Tìm kiếm</button>
                </div>
            </div>
        </form>
    </section>

    <section class="content mt-3">
        <div class="container-fluid">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Mã vai trò</th>
                        <th>Tên vai trò</th>
                        <th>Mô tả</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoleId</td>
                            <td>@item.RoleName</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.RoleId">✏️ Sửa</a>
                                @* Không cho xóa quyền mặc định (admin, người dùng) *@
                                @if (item.RoleId > 2)
                                {
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.RoleId">🗑️ Xóa</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
