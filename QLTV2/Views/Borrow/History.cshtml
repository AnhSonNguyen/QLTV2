@model List<QLTV2.Models.TbBorrow>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lịch sử mượn sách";
}

<div class="container py-5">
    <h2 class="mb-4">Lịch sử mượn sách</h2>

    @if (!Model.Any())
    {
        <p>Bạn chưa có lịch sử mượn sách nào.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Tên sách</th>
                    <th>Số lượng</th>
                    <th>Ngày mượn</th>
                    <th>Ngày trả dự kiến</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var borrow in Model)
                {
                    foreach (var detail in borrow.TbBorrowDetails)
                    {
                        <tr>
                            <td>@detail.Book.Title</td>
                            <td>@detail.Quantity</td>
                            <td>@borrow.BorrowDate.ToString("dd/MM/yyyy")</td>
                            <td>@borrow.ReturnDate?.ToString("dd/MM/yyyy")</td>
                            <td>@borrow.Status</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
</div>
